<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="169dp"
        android:background="@color/blanco"
        app:layout_constraintBottom_toTopOf="@+id/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253"
        app:srcCompat="@mipmap/logo"
        android:contentDescription="TODO" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Correo electronico"
                android:inputType="none|textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmail"/>

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNombre"/>

            <EditText
                android:id="@+id/etOcupacion"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Ocupacion"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etApellido" />

            <EditText
                android:id="@+id/etPass"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPersonName|textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etOcupacion" />

            <EditText
                android:id="@+id/etPass2"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Repetir contraseña"
                android:inputType="textPersonName|textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPass" />

            <EditText
                android:id="@+id/etFechaNac"
                android:layout_width="281dp"
                android:layout_height="47dp"
                android:layout_marginVertical="12dp"
                android:ems="10"
                android:hint="Fecha de nacimiento"
                android:inputType="date"
                app:layout_constraintBottom_toTopOf="@+id/btnRegistrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPass2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@color/anaranjado"
                android:text="Crear cuenta"
                android:textColor="@color/blanco"
                app:layout_constraintBottom_toTopOf="@+id/tvIniciar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvIniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:text="Si ya estas registrado, inicia secion aquí"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciar"
                app:layout_constraintVertical_bias="0.246" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>